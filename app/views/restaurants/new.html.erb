<h1>Add another restaurant:</h1>
<br>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.submit %>
<% end %>
<br>


<%= link_to 'Back to All Restaurants', restaurants_path(@restaurant) %>
